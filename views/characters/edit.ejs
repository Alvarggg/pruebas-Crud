    <style>
        body {
            background-image: url('/images/editar.jpg');
            background-size: cover; /* Hace que la imagen ocupe toda la pantalla */
            background-position: center; /* Centra la imagen */
            background-repeat: no-repeat; /* Evita que la imagen se repita */
            min-height: 100vh; /* Asegura que la imagen cubra toda la pantalla */
        }
        
        .container {
            background-color: rgba(255, 255, 255, 0.2); /* Blanco con transparencia */
            padding: 20px;
            border-radius: 15px; /* Bordes redondeados */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombras suaves */
            max-width: 600px; /* Ancho máximo del contenedor */
            margin: auto;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        img {
            display: block;
            margin: 20px auto;
            max-width: 100%;
            height: auto;
            border-radius: 10px; /* Imagen con bordes redondeados */
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            width: 100%;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    </style>
