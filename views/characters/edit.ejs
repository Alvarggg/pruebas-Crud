<body>

</script>
        <h1>Editar Arma</h1>
        <form action="/characters/<%= character.id %>/update" method="post">
            
            <!-- Nombre del arma -->
            <div class="mb-3">
                <label for="name" class="form-label">Nombre:</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= character.name %>" required>
            </div>

            <!-- Balas -->
            <div class="mb-3">
                <label for="energyLevel" class="form-label">Balas:</label>
                <input type="number" id="energyLevel" name="energyLevel" class="form-control" value="<%= character.energyLevel %>" required>
            </div>

            <!-- Cargador -->
            <div class="mb-3">
                <label for="lifePoints" class="form-label">Cargador:</label>
                <input type="number" id="lifePoints" name="lifePoints" class="lifePoints" value="<%= character.lifePoints %>" required>
            </div>

            <!-- Clase del arma -->
            <div class="mb-3">
                <label for="tipoArma" class="form-label">Clase:</label>
                <select id="tipoArma" name="tipoArma" class="form-select" required>
                    <option value="Pistola" <%= character.tipoArma === 'Pistola' ? 'selected' : '' %>>Pistola</option>
                    <option value="Escopeta" <%= character.tipoArma === 'Escopeta' ? 'selected' : '' %>>Escopeta</option>
                    <option value="Metralleta" <%= character.tipoArma === 'Metralleta' ? 'selected' : '' %>>Metralleta</option>
                </select>
            </div>

            <!-- Imagen del arma -->
            <div class="mb-3">
                <img src="/images/<%= character.tipoArma %>.png" class="img-fluid" alt="Imagen del arma">
            </div>

            <!-- Botón de actualización -->
            <button type="submit">Actualizar</button>
        </form>
   

    <!-- Bootstrap 5 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
