<body>
    <div class="container">
        <h1>Registro</h1>
        <% if (error) { %>
            <div class="error"><%= error %></div>
        <% } %>
        <form action="/register" method="POST">
            <label for="newUsername">Nuevo Usuario:</label>
            <input type="text" name="newUsername" required>
